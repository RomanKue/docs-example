{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "Member": {
      "properties": {
        "qNumber": {
          "type": "string",
          "minLength": 7,
          "pattern": "^q[a-z0-9]+"
        }
      },
      "required": [
        "qNumber"
      ],
      "type": "object"
    }
  },
  "properties": {
    "apiVersion": {
      "description": "api version of the app schema",
      "const": "v1beta1"
    },
    "members": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/Member"
      }
    },
    "name": {
      "type": "string",
      "description": "name of the app in kebab case",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    }
  },
  "required": [
    "apiVersion",
    "name",
    "members"
  ],
  "title": "UNITY App",
  "type": "object"
}
