{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2021"
    ],
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts"
  ]
}
