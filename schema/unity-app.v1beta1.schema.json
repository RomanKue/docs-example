{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "Deployment": {
      "type": "object",
      "properties": {
        "replicas": {
          "description": "number of replicas to deploy",
          "maximum": 2,
          "minimum": 0,
          "type": "number"
        },
        "container": {
          "description": "specs for the container to deploy",
          "type": "object",
          "properties": {
            "image": {
              "description": "name of the image inside the unity org registry",
              "type": "string",
              "pattern": "app-[a-zA-Z0-9_.-]+",
              "minLength": 1,
              "maxLength": 32
            },
            "port": {
              "type": [
                "number",
                "null"
              ],
              "description": "http port the container listens to (non root user range is from 1025 to 65535, see https://www.msxfaq.de/netzwerk/grundlagen/65535portlimit.htm)",
              "default": 8080,
              "minimum": 1025,
              "maximum": 65535
            },
            "tag": {
              "type": "string",
              "description": "tag of the image to deploy",
              "pattern": "[a-z09_.-]+",
              "minLength": 1,
              "maxLength": 128
            },
            "tmpDirs": {
              "description": "a tmpdir is an empty volume that is writable inside the container",
              "examples": [
                "/tmp/foo"
              ],
              "type": [
                "null",
                "array"
              ],
              "minLength": 0,
              "items": {
                "type": "string"
              }
            },
            "capabilities": {
              "description": "Any capabilities added beyond the allowed list (AUDIT_WRITE,\n    CHOWN, DAC_OVERRIDE, FOWNER, FSETID, KILL, MKNOD, NET_BIND_SERVICE, SETFCAP, SETGID,\n    SETPCAP, SETUID, SYS_CHROOT) are disallowed.\nSee also https://unofficial-kubernetes.readthedocs.io/en/latest/concepts/policy/container-capabilities/.",
              "type": [
                "null",
                "array"
              ],
              "items": {
                "type": "string",
                "enum": [
                  "AUDIT_WRITE",
                  "CHOWN",
                  "DAC_OVERRIDE",
                  "FOWNER",
                  "FSETID",
                  "KILL",
                  "MKNOD",
                  "NET_BIND_SERVICE",
                  "SETFCAP",
                  "SETGID",
                  "SETPCAP",
                  "SETUID",
                  "SYS_CHROOT"
                ]
              }
            },
            "runAsUser": {
              "default": 10000,
              "description": "see https://docs.bridgecrew.io/docs/bc_k8s_37",
              "type": [
                "null",
                "number"
              ],
              "minimum": 10000,
              "maximum": 65536
            }
          },
          "required": [
            "image",
            "tag"
          ]
        }
      },
      "required": [
        "container"
      ]
    }
  },
  "properties": {
    "apiVersion": {
      "description": "api version of the app schema",
      "const": "v1beta1"
    },
    "deployments": {
      "description": "name of the deployment in camel case",
      "propertyNames": {
        "minLength": 2,
        "maxLength": 12
      },
      "patternProperties": {
        "^[a-z0-9]+(?:-[a-z0-9]+)*$": {
          "$ref": "#/definitions/Deployment"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "name": {
      "type": "string",
      "description": "name of the app in kebab case",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "maxLength": 32,
      "minLength": 3
    }
  },
  "required": [
    "apiVersion",
    "name"
  ],
  "title": "UNITY App",
  "type": "object"
}
