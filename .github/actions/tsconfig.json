{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2021"
    ],
    "module": "ES2020",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "**/*.ts"
  ]
}
