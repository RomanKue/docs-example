{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "Member": {
      "properties": {
        "qNumber": {
          "type": "string",
          "minLength": 7,
          "pattern": "^q[a-z0-9]+"
        }
      },
      "required": [
        "qNumber"
      ],
      "type": "object"
    },
    "Deployment": {
      "type": "object",
      "properties": {
        "replicas": {
          "description": "number of replicas to deploy",
          "maximum": 2,
          "minimum": 0,
          "type": "number"
        }
      },
      "required": [
        "replicas"
      ]
    }
  },
  "properties": {
    "apiVersion": {
      "description": "api version of the app schema",
      "const": "v1beta1"
    },
    "deployments": {
      "description": "name of the deployment in camel case",
      "patternProperties": {
        "^[a-z0-9]+(?:-[a-z0-9]+)*$": {
          "$ref": "#/definitions/Deployment"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "members": {
      "items": {
        "$ref": "#/definitions/Member"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "name": {
      "type": "string",
      "description": "name of the app in kebab case",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    }
  },
  "required": [
    "apiVersion",
    "name",
    "members"
  ],
  "title": "UNITY App",
  "type": "object"
}
